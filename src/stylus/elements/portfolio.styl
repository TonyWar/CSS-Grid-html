.portfolio-section
    padding 10px
    grid-template-columns: repeat(4, 1fr)
    grid-gap: 10px
    .portfolio-item
        for num in 1 2 3 4 5 6 7 8 9
            &:nth-child({num})
                background-image: url(../img/num.jpg)

.portfolio-item
    min-height: 32vh
    background-size: cover
    background-position: center
    text-align center
    align-content: center
    padding: gutter
    font-size: 20px
    font-weight bold
    color #ffffff
    position relative // Для того чтобы overlay нормално работал
    transition: color .5s ease 
    cursor pointer
    &:hover
        color: color_accent 
        &::before
            opacity .85
    &::before
        content: ''
        position: absolute
        top 0
        left 0
        right 0
        bottom 0
        background-color: color_dark
        opacity .65
        transition: opacity 0.5s ease
    // Это означает применения стиля для любого потомка
    > *
        z-index 1

    // Элемент занимает 2 ячейки по горизонтали
    &:nth-child(1)
        grid-column: 1 / 3
    
    &:nth-child(5)
        grid-column: 2 / 4
    
    &:nth-child(6)
        grid-column: 4
        grid-row: 2 / 4 

.buttoncase
    grid-column: 1 / 5
    padding: gutter gutter 50px